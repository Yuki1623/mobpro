{
  "name": "tofuscreenshare2",
  "short_name": "tofuss2",
  "version": "0.00.02",
  "manifest_version": 2,
  "description": "Your extension description here",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "*://tofurtc.firebaseapp.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://127.0.0.1/*"], 
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }]
}
